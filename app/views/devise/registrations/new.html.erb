<div class="container">
  <div class="login-container">
    <h3 id="error-msg"></h3>
    <div id="output"></div>
    <h2>Sign up</h2>
    <div class="form-box">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f| %>
        <%= devise_error_messages! %>

        <%= f.email_field :email, autofocus: true, :placeholder => 'email', :required => true %>

        <%= f.text_field :username, autocomplete: "off", :placeholder => 'username', :pattern => ".{5,20}", :required => true, :title => "5 to 20 characters allowed without spaces" %>

        <div><%= f.label :image %><br />
        <%= f.file_field :image, :accept => "image/gif, image/jpeg, image/svg, image/jpg, image/png" %>
        </div>

        <br /><%= f.password_field :password, autocomplete: "off", :placeholder => 'password' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'password confirmation' %>

        <button class="btn btn-info btn-block loginbox" name="commit" type="submit" value="Sign up">Sign up</button>
      <% end %>

      <div id="render-box">
        <br>
        <%- if controller_name != 'sessions' %>
          <%= link_to "Sign in", new_session_path(resource_name) %><br />
        <% end -%>
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>

