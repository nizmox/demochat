  <div class="login-container">
    <h3 id="error-msg"></h3>
    <div id="output"></div>
    <div class="avatar"></div>
    <div class="form-box">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: 'sign_in_user'}, format: :json, remote: true) do |f| %>
        
        <%= f.email_field :email, autofocus: true, :placeholder => 'email', :pattern => ".{5,20}", :required => true, :title => "only allows alphanumeric characters" %>
        <%= f.password_field :password, autocomplete: "off", :placeholder => 'password' %>

        <button class="btn btn-info btn-block loginbox" name="commit" type="submit" value="Sign in">Sign in</button><br>
      <% end %>

      <div id="render-box">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name) %><br />
      <% end -%>
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
